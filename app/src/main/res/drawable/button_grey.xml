<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/dimen_3dp" />
            <stroke android:width="@dimen/dimen_1dp" android:color="@color/colorDarkGrey" />
            <gradient android:angle="-90" android:startColor="@color/colorGrey" android:endColor="@color/colorDarkGrey"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/dimen_3dp" />
            <stroke android:width="@dimen/dimen_1dp" android:color="@color/colorDarkGrey" />
            <solid android:color="@color/colorDarkGrey"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/dimen_3dp" />
            <stroke android:width="@dimen/dimen_1dp" android:color="@color/colorDarkGrey" />
            <gradient android:angle="-90" android:startColor="@color/colorGrey" android:endColor="@color/colorDarkGrey" />
        </shape>
    </item>
</selector>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Logo ImageView -->
    <style name="logo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/logo_scorer_keeper</item>
        <item name="android:background">#f7f5cc</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingTop">@dimen/dimen_24dp</item>
        <item name="android:paddingBottom">@dimen/dimen_24dp</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <!-- Transparent Background Panel -->
    <style name="backgroundPanel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Text Styles -->
    <style name="GenLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/colorBrownDark</item>
        <item name="android:textSize">@dimen/textsize_medium</item>
    </style>

    <style name="HeadingText" parent="GenLayout">
        <item name="android:textSize">@dimen/textsize_xlarge</item>
        <item name="android:layout_marginBottom">@dimen/dimen_40dp</item>
    </style>

    <style name="HighlightedText" parent="GenLayout">
        <item name="android:textColor">@color/colorRed</item>
    </style>

    <style name="GreenPanel" parent="GenLayout">
        <item name="android:background">@color/colorGreenLight</item>
        <item name="android:padding">@dimen/dimen_24dp</item>
    </style>

    <!-- Style for Dropdown box -->
    <style name="SelectBox" parent="GenLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingRight">@dimen/dimen_10dp</item>
        <item name="android:layout_marginLeft">@dimen/dimen_10dp</item>
        <item name="android:popupBackground">@color/colorGreenBack</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>


    <!-- Style for Buttons -->
    <style name="GenButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/dimen_10dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_10dp</item>
        <item name="android:paddingTop">@dimen/dimen_10dp</item>
        <item name="android:paddingBottom">@dimen/dimen_10dp</item>
        <item name="android:paddingLeft">@dimen/dimen_20dp</item>
        <item name="android:paddingRight">@dimen/dimen_20dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/textsize_medium</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ButtonRed" parent="GenButton">
        <item name="android:background">@color/colorRed</item>
    </style>

    <style name="ButtonGreen" parent="GenButton">
        <item name="android:background">@color/colorGreenDark</item>
    </style>

    <style name="ButtonReset" parent="GenButton">
        <item name="android:background">@color/colorBrownLight</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="ButtonScore">
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">@dimen/dimen_24dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_15dp</item>
        <item name="android:padding">@dimen/dimen_1dp</item>
        <item name="android:background">@color/colorGreenDark</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/textsize_small</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Style for Team Scores -->
    <style name="TeamPanel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/height_team_panel</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/dimen_5dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_10dp</item>
    </style>

    <style name="TeamPanelBorder">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">@dimen/height_team_panel</item>
        <item name="android:background">@color/colorGreen</item>
        <item name="android:layout_marginBottom">@dimen/dimen_30dp</item>
    </style>

    <style name="TeamInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/dimen_10dp</item>
        <item name="android:textColor">@color/colorBrownDark</item>
        <item name="android:textSize">@dimen/textsize_medium</item>
    </style>

    <style name="TeamScore" parent="TeamInfo">
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:textSize">@dimen/textsize_xlarge</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@color/colorCream</item>
    </style>
</resources>
